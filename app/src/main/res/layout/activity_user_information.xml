<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_information">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="421dp"
        android:layout_height="92dp"
        android:background="#E73927"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageBack"
        android:layout_width="64dp"
        android:layout_height="68dp"
        android:onClick="User_To_Home"
        android:layout_marginEnd="360dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#E73927"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/backarrow" />


    <TextView
        android:id="@+id/userInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:text="User Information"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextbirth"
        android:layout_width="140dp"
        android:layout_height="44dp"
        android:layout_marginStart="118dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/edittext3"
        android:ems="10"
        android:hint="Year of Birth"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/year_of_birth"
        app:layout_constraintTop_toBottomOf="@+id/gender_spinner" />

    <EditText
        android:id="@+id/editTextheight"
        android:layout_width="140dp"
        android:layout_height="44dp"
        android:layout_marginStart="174dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/edittext3"
        android:ems="10"
        android:hint="Height"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/heightView"
        app:layout_constraintTop_toBottomOf="@+id/editTextbirth" />


    <EditText
        android:id="@+id/editTextweight"
        android:layout_width="140dp"
        android:layout_height="43dp"
        android:layout_marginStart="170dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/edittext3"
        android:ems="10"
        android:hint="Weight"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/weightView"
        app:layout_constraintTop_toBottomOf="@+id/editTextheight" />

    <TextView
        android:id="@+id/emailview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="Email"
        android:textColor="#000000"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/account_settingView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Account Settings"
        android:textColor="#000000"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailview" />

    <TextView
        android:id="@+id/genderView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="Gender"
        android:textColor="#000000"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_settingView" />

    <TextView
        android:id="@+id/year_of_birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Year of birth"
        android:textColor="#000000"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/genderView" />

    <TextView
        android:id="@+id/heightView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:text="Height"
        android:textColor="#000000"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/year_of_birth" />

    <TextView
        android:id="@+id/weightView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Weight"
        android:textColor="#000000"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heightView" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="247dp"
        android:layout_height="49dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/edit_round"
        android:fontFamily="@font/viga"

        android:text="Logout"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSave" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="247dp"
        android:layout_height="49dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/edit_round2"
        android:fontFamily="@font/viga"
        android:text="Save"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextweight" />

    <Spinner
        android:id="@+id/gender_spinner"
        android:layout_width="139dp"
        android:layout_height="44dp"
        android:layout_marginStart="168dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext3"
        app:layout_constraintStart_toEndOf="@+id/genderView"
        app:layout_constraintTop_toBottomOf="@+id/accountSetting_button" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/accountSetting_button"
        android:layout_width="42dp"
        android:layout_height="34dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="75dp"
        android:clickable="true"
        android:focusable="true"
        app:backgroundTint="#FFFFFF"
        app:fabSize="mini"
        app:layout_constraintEnd_toStartOf="@+id/accountSetting_btn"
        app:layout_constraintStart_toEndOf="@+id/account_settingView"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:srcCompat="@drawable/ic_arrow_next" />

</androidx.constraintlayout.widget.ConstraintLayout>